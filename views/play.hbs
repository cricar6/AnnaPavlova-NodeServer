<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Anna Pavlova | {{play.name}}
    </title>

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/play.css">
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond:300,300i,400,400i,500,500i,600,600i,700,700i|Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
</head>
<body>
    <div class="lateralSide">
        <div class="logo">
            <img src="/imgs/Logo.png" alt="Anna Pavlova - Academia de Ballet">
        </div>
        <nav>
            <ul>
                <li>Inicio</li>
                <li>Nosotros</li>
                <li>Obras</li>
                <li>Contacto</li>
            </ul>
        </nav>
        <div class="socialNets">
            <img src="/imgs/icos/Pinterest.png" alt="Pinterest" class="nets">
            <img src="/imgs/icos/Twitter.png" alt="Twitter" class="nets">
            <img src="/imgs/icos/Facebook.png" alt="Facebook" class="nets">
            <img src="/imgs/icos/Instagram.png" alt="Instagram" class="nets">
        </div>
    </div>
    <div class="generalContainer">
        <div class="superiorBar">
            <span style="font-size: 25px;">Back</span>
        </div>
        <div class="contentContainer">
            <div class="playDescription">
            
            
            <div class="imgPlay">
                <img src="/{{play.image}}" alt="asds{{play.name}}">
             </div>
             <p>{{play.description}}</p>
            </div>

            <div class="right">
                
                <div class="playTable">
                    <div class="title">
                        <h5>{{play.name}}</h6>
                    </div>
                    <div class="subtitle">
                        <h6>Sobre la obra</h6>
                        
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Basado en:
                        </p>
                        <p class="data">
                            {{play.basedIn}}
                        </p>
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Música:
                        </p>
                        <p class="data">
                            {{play.music}}
                        </p>
                    </div>
                    <div class="tabContainer">
                        <p class="dataType"> 
                            Coreografía:
                        </p>
                        <p class="data">
                            {{play.choreo}}
                        </p>
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Personajes:
                        </p>
                        <p class="data">
                            
                            {{play.personajes}}
                        </p>
                    </div>
                    <div class="subtitle">
                        <h6>Puesta en escena</h6> 
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Ubicación:
                        </p>
                        <p class="data">
                            {{play.publicationUbication}}
                        </p>
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Teatro:
                        </p>
                        <p class="data">
                            
                            {{play.placePremiere}}
                        </p>
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Fecha:
                        </p>
                        <p class="data">
                            
                            {{play.datePremiere}}
                        </p>
                    </div>
                    <div class="tabContainer">
                        <p class="dataType">
                            Directores:
                        </p>
                        <p class="data">
                            
                            {{play.directores}}
                        </p>
                    </div>


                </div>

                <button class="">
                        Reservar Boletería
                </button>
            </div>
        </div>
    </div>

</body>
</html>